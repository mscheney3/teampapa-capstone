@using WebApplication.Web.Models.Account;
@model User
@{
    ViewData["Title"] = "AssignStudent";
    List<User> students = TempData["students"] as List<User>;
    List<User> teachers = TempData["teachers"] as List<User>;
}

<h2>Assign Student to Teacher</h2>


<form asp-controller="account" asp-action="AssignStudent" method="post">

    <div class="form-group">
        <select asp-for="Id">
            @foreach (User teacher in teachers)
            {
                <option>@teacher</option>
            }
        </select>
    </div>

    <div class="form-group">
        <select asp-for="Id">
            @foreach (User student in students)
            {
                <option>@student</option>
            }
        </select>
    </div>



    <input type="submit" value="Assign Student" class="btn btn-default" />
</form>






