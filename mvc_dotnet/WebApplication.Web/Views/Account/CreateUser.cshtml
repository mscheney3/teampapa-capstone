@using WebApplication.Web.Models.Account;
@model User
@{
    ViewData["Title"] = "CreateUser";
    User currentUser = TempData["User"] as User;
}

<h2>CreateUser</h2>


<form asp-controller="account" asp-action="CreateUserForm" method="post">

    <div class="form-group">
        <label asp-for="Username"></label>
        <input type="text" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Salt" />
        <span asp-validation-for="Salt"></span>
    </div>
    @if (currentUser.Role == "Admin")
    {
        <div class="form-group">
            <select asp-for="Role">
                <Option> Admin </Option>
                <Option> Teacher </Option>
            </select>
        </div>
    }
    else if (currentUser.Role == "Teacher")
    {
        <div class="form-group">
            <select asp-for="Role">
                <Option> Teacher </Option>
                <Option> Student </Option>
            </select>
        </div>
    }


    <input type="submit" value="Create User" class="btn btn-default" />
</form>
