@model IEnumerable<WebApplication.Web.Models.Scenario.Scenario>

@{
    ViewData["Title"] = "Index";
}

<h2>Assignments</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Scene
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src=~/images/@item.ImageName style="height: 20%;"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Start Assignment", "scenario", new { id = item.Id })
                </td>

            </tr>
        }
    </tbody>
</table>
