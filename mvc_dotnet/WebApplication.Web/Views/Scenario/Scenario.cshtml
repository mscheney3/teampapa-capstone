@model WebApplication.Web.Models.Scenario.Scenario

@{
    ViewData["Title"] = "Scenario";
}

<h2 class="scenario-description">@Model.Description</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <img src=~/images/Classroom/@Model.ImageName class="scenario-image">
        </dd>

        <dd>
            <h3 class="question">@Html.DisplayFor(model => model.Question)</h3>
        </dd>
        <dd>
            @foreach (var item in Model.AnswerList)
            {
            <div >
                <a class="answer" id="go-to-response" asp-action="Response" asp-route-id="@item.AnswerId">@item.AnswerText</a>
            </div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Scenes</a>
</div>
